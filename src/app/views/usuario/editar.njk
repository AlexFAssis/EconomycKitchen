{% extends "_layouts/default.njk" %} 

{% block body %}
  <div class="row"> 
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" id="main"> 
      <div class="cadastro">
        <h3>Editar Usuário</h3>
        <br>
        <form action="/usuario/editar/{{ usuario._id }}" method="POST">
          {# {% include "_partials/flash.njk" %} #}
          {# <input type="hidden" name="_id"> #}
          <div class="row">
            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" name="nome" value="{{usuario.nome}}" class="form-control" id="nomeUsuario" maxlength="50" required>
              </div>
            </div>
          {# </div>
          <div class="row">   #}
            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" name="email"  value="{{usuario.email}}" class="form-control" maxlength="50" required>
              </div>
            </div>  
          </div>  
          <div class="row">  
            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                <label for="login">Login</label>
                <input type="text" name="login"  value="{{usuario.login}}"  class="form-control" maxlength="50" required>
              </div>
            </div>
          {# </div>
          <div class="row"> #}
            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                <label for="tipo">Tipo de Usuário</label>
                <select name="tipo" class="selectTipos form-control">
                </select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xl-4 col-lg-6 col-md-8" >
              <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" name="senha"  value="{{usuario.senha}}" class="form-control" maxlength="50" required>
              </div>
            </div>
          {# </div>
          <div class="row"> #}
            <div class="col-xl-4 col-lg-6 col-md-8" >
              <div class="form-group">
                <label for="senhaConfirmacao">Senha Confirmação</label>
                <input type="password" name="senhaConfirmacao" value="{{usuario.senhaConfirmacao}}" class="form-control" maxlength="50" required>
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary col-xl-1 col-lg-2 col-md-4">Confirmar</button>
          <a class="btn btn-primary btnVoltarcol-xl-1 col-lg-2 col-md-4" href="/usuario/listar" role="button">Voltar</a>

          <select class="selectHidden">
            <option value="Administrador" class="hidden">Administrador</option>
            <option value="Usuário" class="hidden">Usuário</option>
          </select>
          <p style="display:none" id="usuarioTipo">{{usuario.tipo}}</p>
          <br><br>
        </form>
      </div>
    </main>
  </div> 

  <script src="/assets/js/functions/funcoesUsuario.js">
{% endblock%} 