{% extends "_layouts/default.njk" %} 

{% block body %}
  <div class="row"> 
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" id="main"> 
      <div class="cadastro">
        <h3>Cadastro de Usuário</h3>
        <br>
        <form action="/usuario" method="POST">

          <div class="row">
            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" name="nome" placeholder="Nome" class="form-control" id="nomeUsuario" maxlength="50" required>
              </div>
            </div>

            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" name="email" placeholder="E-mail" class="form-control" maxlength="50" required>
              </div>
            </div>  
          </div>  
          <div class="row">  
            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                <label for="login">Login</label>
                <input type="text" name="login" placeholder="Login"  class="form-control" maxlength="50" required>
              </div>
            </div>

            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                <label for="tipo">Tipo de Usuário</label>
                <select name="tipo" class="form-control">
                  <option value="Administrador" name="tipo">Administrador</option>
                  <option value="Usuário" name="tipo">Usuário</option>
                </select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xl-4 col-lg-6 col-md-8" >
              <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" name="senha" placeholder="Senha" class="form-control" maxlength="50" required>
              </div>
            </div>

            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                <label for="senhaConfirmacao">Senha Confirmação</label>
                <input type="password" name="senhaConfirmacao" placeholder="Confirmação de Senha" class="form-control" maxlength="50" required>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xl-4 col-lg-6 col-md-8">
              <div class="form-group">
                {% include "_partials/flash.njk" %} 
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary col-xl-2 col-lg-3 col-md-4 mt-2">Criar</button>
        </form>
      </div>
    </main>
  </div> 

  <script src="/assets/js/functions/funcoesUsuario.js">

{% endblock%}