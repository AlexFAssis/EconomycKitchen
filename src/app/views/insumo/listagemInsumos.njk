{% extends "_layouts/default.njk" %} 

{% block body %}
    <div class="row"> 
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" id="main"> 
            <div class="listagem">
                <a href="/insumo/cadastro">
                    <button class="btn btn-warning" id="btnNovo">
                        <i class="fas fa-plus-circle"></i>
                    </button>
                </a>
                
                <h3 id="TituloListagem">Estoque de Insumos</h3>
                <br>

                <table class="table table-striped" id="dataTable" width="100%">
                    <thead class="">
                    <tr>
                        <th scope="col" style="display:none">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Quantidade em Estoque</th>
                        <th scope="col">Valor em Estoque</th>
                        <th scope="col">Preço Médio em Estoque</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for insumo in insumos%}
                        <tr id="{{insumo._id}}">
                            <th scope="row" style="display:none" class="tirarNegrito classDesc">{{insumo_id}}</th>
                            <th scope="row" class="tirarNegrito classDesc">{{insumo.nome}}</th>
                            <th scope="row" class="tirarNegrito classDesc">{{insumo.qtdeEstoque}}</th>
                            <th scope="row" class="tirarNegrito classDesc">{{insumo.valorEstoque}}</th>

                        {% if insumo.qtdeEstoque > 1 %}
                            <th scope="row" class="tirarNegrito classDesc">{{insumo.precoMedio}}</th>
                        {% else %}    
                            <th scope="row" class="tirarNegrito classDesc">{{0}}</th>
                        {% endif %} 

                        </tr>
                    {% else %}
                        <th scope="row"></th>
                        <td></td>
                        <td></td>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </main>
    </div> 
    <script src="/assets/js/functions/funcoesPopup.js"></script>
    <script src="/assets/js/sb-admin-datatables.min_name.js" type="text/javascript"></script>
{% endblock%}