{% extends "_layouts/default.njk" %} 

{% block body %}
  <div class="row"> 
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" id="main"> 
      <div class="cadastro">
        <h3>Cadastro de Insumo</h3>
        <br>
        <form action="/insumo" method="POST">
          <div class="row">
            <div class="col-md-8 col-lg-6">
              <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" name="nome" placeholder="Nome" class="form-control" maxlength="50" required>
              </div>
              {% include "_partials/flash.njk" %}
            </div>
          </div>
          <button type="submit" class="btn btn-primary col-xl-2 col-lg-3 col-md-4 mt-2">Criar</button>
        </form>
      </div>
    </main>
  </div>     
{% endblock%}