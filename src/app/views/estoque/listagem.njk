{% extends "_layouts/default.njk" %} 

{% block body %}
  <div class="row"> 
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" id="main">  
      <div class="listagem">
        <h3 id="TituloListagem">Estoque</h3>
        <table class="table table-striped" id="dataTable" width="100%">
          <thead class="">
            <tr>
              <th scope="col">Receita</th>
              <th scope="col">Quantidade</th>
            </tr>
          </thead>
          <tbody>
              {% for estoqueItem in estoque%}
              <tr>
                  <th scope="row" class="tirarNegrito">{{estoqueItem.receita.nome}}</th>
                  <td class="">{{estoqueItem.quantidade}}</td>
              </tr>
            {% else %}
              <th scope="row"></th>
              <td></td>
              <td></td>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </main>
  </div>  

  <script src="/assets/js/sb-admin-datatables.min.js" type="text/javascript"></script> 
{% endblock%}